@model IEnumerable<Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        @if(product.Status == "active")
        {
            <div class="col-lg-3 col-sm-6">
                <div class="row p-2">
                    <div class="col-12 p-1">
                        <div class="card border-0 p-3 shadow border-top border-5 rounded">
                            <img src="@product.ImageUrl" class="card-img-top rounded" />
                            <div class="p1-1">
                                <p class="card-title h5 text-dark text-center">@product.Name</p>
                            </div>
                            <div class="p1-1">
                                <p class="card-title h5 text-dark text-center">@product.ProductPrice.ToString("c")</p>
                            </div>
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>