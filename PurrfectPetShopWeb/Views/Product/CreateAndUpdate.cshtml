@model ProductVM

<div class="card shadow border-0">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="text-white">@(Model.Product.Id != 0 ? "Update" : "Create") Product</h1>
        </div>
    </div>
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <input asp-for="Product.Id" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="mb-3">
                        <label asp-for="Product.Name"></label>
                        <input asp-for="Product.Name" type="text" class="form-control" />
                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Product.ProductPrice"></label>
                        <input asp-for="Product.ProductPrice" type="text" class="form-control" />
                        <span asp-validation-for="Product.ProductPrice" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="col-sm-2 col-form-label" asp-for="Product.Description">Description: </label>
                        <div>
                            <textarea class="form-control" rows="8" asp-for="Product.Description"></textarea>
                            <span asp-validation-for="Product.Description"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Product.ImageUrl"></label>
                        <input type="file" name="file" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-control border-0 shadow">
                            <option disabled selected>Select Category</option>
                        </select>
                        <label asp-for="Product.CategoryId"></label>
                        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="col-sm-2 col-form-label" asp-for="Product.Status">Status: </label>
                        <div>
                            <select class="form-control form-control-lg" asp-for="Product.Status">
                                <option value="inactive" selected="selected">Inactive</option>
                                <option value="active">Active</option>
                            </select>
                        </div>
                    </div>
                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            @if (Model.Product.Id != 0)
                            {
                                <button type="submit" class="btn btn-primary">Update</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary">Create</button>
                            }
                        </div>
                    </div>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>

                <div class="col-2">
                    <img src="@Model.Product.ImageUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
                </div>
            </div>
        </form>
    </div>

</div>