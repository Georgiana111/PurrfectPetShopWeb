@model List<Product>
<partial name="_Notification" />
<div class="container">
    <div class="row pt-4 pb-23">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="CreateAndUpdate" class="btn btn-primary">
                Create New Product
            </a>
        </div>
    </div>

</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Price
            </th>
            <th>
                Category
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.ProductPrice</td>
                <td>@obj.Category.Name</td>
                <td>
                    <div role="group">
                        <a asp-controller="Product" asp-action="CreateAndUpdate" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            Edit
                        </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-delete mx-2">
                            Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>