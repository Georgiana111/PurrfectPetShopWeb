<form method="post">
    <br />
    <div class="card shadow border-0">
        <div class="card-header text-light">
            <div class="row px-4">
                <div class="col-6">
                    <h5 class="pt-2 text-dark">
                        Shopping Cart
                    </h5>
                </div>
            </div>
        </div>
        <div class="card-body my-4">
            <div class="row mb-3 pb-3">
                <div class="col-md-2 offset-md-1">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary text-uppercase"><small>Continue Shopping</small></a>
                </div>
                <br />
                <br />
                <br />
                <div class="col-md-10 offset-md-1">
                    @foreach (var item in Model.ShoppingCartList)
                    {
                        <div class="row border-bottom pb-3">
                            <div class="d-none d-lg-block col-lg-1 text-ceter py-2">
                                <img src="@item.Product.ImageUrl" class="rounded" width="100%" />
                            </div>
                            <div class="col">
                                <div class="text-uppercase text-secondary">
                                    <strong>@item.Product.Name</strong>
                                </div>
                            </div>
                            <div class="col">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-action="Plus" asp-route-id="@item.Id">
                                        <i class="bi bi-file-plus"></i>
                                    </a>
                                    <h6>
                                        @item.Product.ProductPrice
                                        <span class="text-muted">&nbsp;x&nbsp;</span>@item.Count
                                    </h6>
                                    <a asp-action="Minus" asp-route-id="@item.Id">
                                        <i class="bi bi-file-minus"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="col">
                                <div>
                                    <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger bg-gradient py-2">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="card-footer bg-white border-0">
                <div class="row">
                    <div col-md-4 offset-md-4>
                        <ul class="list-group md-5">
                            <li class="d-flex justify-content-between align-items-center">
                                <h5 class="text-dark text-uppercase">Total (USD)</h5>
                                <h5 class="text-dark">@Model.Total.ToString("c")</h5>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>